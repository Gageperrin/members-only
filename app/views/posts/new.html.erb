<% provide(:title, "Create a post") %>
<h1>New Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: postsnew_path) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_field :body %>

      <%= f.submit "Submit Post", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
